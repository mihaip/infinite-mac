{
    "name": "infinite-mac",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@testing-library/jest-dom": "^5.11.4",
        "@testing-library/react": "^11.1.0",
        "@testing-library/user-event": "^12.1.10",
        "@types/emscripten": "^1.39.4",
        "@types/file-saver": "^2.0.3",
        "@types/jest": "^26.0.15",
        "@types/node": "^12.0.0",
        "@types/react": "^17.0.0",
        "@types/react-dom": "^17.0.0",
        "file-saver": "^2.0.5",
        "husky": "^6.0.0",
        "idb-keyval": "^6.0.3",
        "jszip": "^3.7.0",
        "lint-staged": "^11.0.0",
        "prettier": "^2.3.1",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-scripts": "4.0.3",
        "ringbuf.js": "^0.2.1",
        "service-worker-loader": "^4.0.2",
        "typescript": "^4.1.2",
        "web-vitals": "^1.0.1",
        "worker-loader": "^3.0.8"
    },
    "scripts": {
        "import-basilisk-ii": "scripts/import-basilisk-ii.sh",
        "import-disks": "scripts/import-disks.py",
        "build-xadmaster": "scripts/build-xadmaster.sh",
        "start": "PORT=3127 react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "worker-preview": "wrangler preview --watch",
        "worker-deploy": "wrangler publish --env production"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ],
        "rules": {
            "no-var": "error",
            "prefer-const": "error",
            "import/no-webpack-loader-syntax": "off",
            "no-restricted-globals": "off",
            "@typescript-eslint/consistent-type-imports": [
                "error",
                {
                    "disallowTypeAnnotations": false
                }
            ]
        }
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
            "prettier --write"
        ]
    },
    "prettier": {
        "trailingComma": "es5",
        "jsxBracketSameLine": true,
        "bracketSpacing": false,
        "tabWidth": 4,
        "semi": true,
        "singleQuote": false,
        "quoteProps": "preserve",
        "arrowParens": "avoid"
    }
}
