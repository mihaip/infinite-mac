{
    "compilerOptions": {
        "target": "ES2020",
        "module": "esnext",
        "lib": ["ES2020"],
        "types": ["@cloudflare/workers-types/latest", "vite/client", "node"],
        "strict": true,
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "incremental": true,
        // Ignore warnings about the Worker and SharedWorker types referenced
        // in vite/client.
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["../src/*"]
        }
    }
}
